<style>

#table1 th, #table1 td {
  padding:10px !important;
}
</style>
<center><h1>Booked Tickets</h1>


<%  sno = 1 %>
<% if @t.blank? then %>
   <p> No Tickets booked to display </p>
<% else %>
<table border="1" id="table1">
<tr><th>S.No</th><th>Ticket Number</th><th>DOB</th><th>DOJ</th><th>Source</th><th>Destination</th><th>Departure</th><th>Arrival</th><th>No.of.Tickets</th><th>Total Fare</th></tr>
<% @t.each do |t| %>

<% cancel_charge = t.count_cancel * 100 %>
<% confirm_count = t.count - t.count_cancel %>
   <tr><td><%= sno %></td>
	<td><a href="show?ticketid=<%= t.id %>" target="_blank" >FBS#<%= t.id %></a></td>
	<td><%= t.DOB %></td><td><%= t.journey.date %></td><td><%= t.route.source.name %></td><td><%= t.route.destination.name %></td><td><%= t.route.st %></td><td><%= t.route.et %></td><td><%= confirm_count %>/<%= t.count %></td><td>
	<% if cancel_charge != 0 then %><abbr title="Cancellation Charge:<%= cancel_charge %>"><%= t.fare %></abbr>
	<% else %> <%= t.fare %> <%end %></td></tr>

<% sno+=1 %>
<% end %>
</table>
</center>
<% end %>
