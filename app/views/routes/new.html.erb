<head>
<script src="/assets/route_new.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

<center><h1>Enter the Route to Add</h1></center>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for(@route, url: {controller:"routes", action: "create"}, format: :csv, html: {:onsubmit =>" return validateform()"}) do |f| %>
    
    <%= f.label :Source %><br>
    <%= f.collection_select(:sid, Place.all, :id, :name, :prompt => true, :style => "width: 50%", :class => 'form-control' ) %></br>

    <%= f.label :Destination %><br>
    <%= f.collection_select(:did, Place.all, :id, :name, :prompt => true, :style => "width: 50%", :class => 'form-control' ) %></br>
    
    <%= f.label :StartTime %>
    <%= f.time_field :st, class: 'form-control' ,:id=> 'st' %>
  
    <%= f.label :EndTime %>
    <%= f.time_field :et, class: 'form-control' ,:id=> 'et' %>
  
    <%= f.label :Fare %>
    <%= f.text_field :fare, class: 'form-control' ,:id => 'fare'%>
  
    <%= f.label :Availability %>
    <%= f.number_field :max, class: 'form-control', :min => 10 , :max => 40 , :value => 30 %>
  
    <%= f.submit "Add Route", class: "btn btn-primary" %>
  
<% end %>
</div>
</div>